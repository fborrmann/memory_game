<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="http://localhost:8984/static/xsltforms/xsltforms.xsl" type="text/xsl"?>
<?xsltforms-options debug="no"?>

<!DOCTYPE html [
  <!ENTITY nbsp "&#x00A0;">
]>

<!-- Define prefixes for the XHTML and the XForms namespaces. -->
<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:xf="http://www.w3.org/2002/xforms"
>

<head>
  <title>Memory</title>

<!-- Define an XForms model. -->

<xf:model>
  <xf:instance id="data_instance" xmlns="" src="http://localhost:8984/XSLT/welcomeScreenInfo"/>
  <!-- Precondition: range is xs:integer >= 0 -->
  <xf:submission id="newGameID" method="post" resource="http://localhost:8984/XSLT/newGameID"/>
  <xf:submission id="newGameNewSubmit" method="post" resource="http://localhost:8984/XSLT/newGameNew" ref="/screenInfo" instance="data_instance"/>
</xf:model>
<script src="http://code.jquery.com/jquery-1.10.2.js"></script>
<style type="text/css"><![CDATA[
          @namespace xf url("http://www.w3.org/2002/xforms");
		  .hsc_name {font-weight: bold;}
		  .hsc_name::after {content:": ";}
body {
	background: url("http://localhost:8984/static/data/background.jpg");
	color: #404040;
	padding: 0;
	margin: 0;
	width: 100%;
}

button {
	border: 1px solid #808080;
}

input[type="text"] {
	border: 1px solid #808080;
	padding: 5px;
	font-size: 16px;
}

.box_newgame {
width: 400px;
}

timestamp {
display: none;}

player {
display: block;}

player name {
font-weight: bold;}

player points::before {
	content: "(";
	}
player points::after {
	content: ")";
	}
#header {
width: 100%;
margin: 0;
padding: 20px 0;
text-align: center;
}
#logo {
width: 720px;
}
#links highscores* {font-weight: bold;}
]]></style>
</head>

	
<body>
	<div id="header">
	<img alt="TUM Memory" src="http://localhost:8984/static/data/logo.svg" id="logo"/>
	</div>
  <!-- One of the following field sets is displayed, depending on screen type -->

    <xf:group ref=".">
		<div class="box_newgame">
      <table width="100%" bgcolor="#00FF00" style="font-family:arial;">
     <tr><td> Neues Spiel anlegen: </td></tr>
  <tr>
	  <td>Karten Paare:</td>
	  <td><xf:select1 ref="pairs">
                <xf:item>
                    <xf:label>2</xf:label>
                    <xf:value>2</xf:value> 
                </xf:item>
                <xf:item>
                    <xf:label>3</xf:label>
                    <xf:value>3</xf:value> 
                </xf:item>
                <xf:item>
                    <xf:label>4</xf:label>
                    <xf:value>4</xf:value> 
                </xf:item>
                <xf:item>
                    <xf:label>5</xf:label>
                    <xf:value>5</xf:value> 
                </xf:item>
                <xf:item>
                    <xf:label>6</xf:label>
                    <xf:value>6</xf:value> 
                </xf:item>
                <xf:item>
                    <xf:label>7</xf:label>
                    <xf:value>7</xf:value> 
                </xf:item>
                <xf:item>
                    <xf:label>8</xf:label>
                    <xf:value>8</xf:value> 
                </xf:item>             
        </xf:select1></td>

  </tr>
  <tr>
  	  <td>Spieler 1:</td>
	  <td><xf:input ref="player1"/></td>
  </tr>
    <tr>
  	  <td>Spieler 2:</td>
	  <td><xf:input ref="player2"/></td>
  </tr>
  <tr>
  	  <td>Spieler 3:</td>
	  <td><xf:input ref="player3"/></td>
  </tr>
  
   <tr>
  	  <td>Spieler 4:</td>
	  <td><xf:input ref="player4"/></td>
  </tr>
  
  <tr><td><p><xf:submit submission="newGameNewSubmit">
      <xf:label>start</xf:label>
    </xf:submit></p></td></tr>
  
       <tr> <td>Gespeichertes Spiel laden: </td></tr>
  <tr>
	  <td>Spiel ID:</td>
	  <td><xf:select1 ref="id_chosen">
	  
				
				
                <xf:item>
                    <xf:label>Monday</xf:label>
                    <xf:value>monday</xf:value> 
                </xf:item>
                <xf:item>
                    <xf:label>Tuesday</xf:label>
                    <xf:value>tuesday</xf:value>
                </xf:item>
                <xf:item>
                    <xf:label>Wednesday</xf:label>
                    <xf:value>wednesday</xf:value>
                </xf:item>
                <xf:item>
                    <xf:label>Thursday</xf:label>
                    <xf:value>thursday</xf:value>
                </xf:item>
                <xf:item>
                    <xf:label>Friday</xf:label>
                    <xf:value>friday</xf:value>
                </xf:item>
                <xf:item>
                    <xf:label>Saturday</xf:label>
                    <xf:value>saturday</xf:value>
                </xf:item>
                <xf:item>
                    <xf:label>Sunday</xf:label>
                    <xf:value>sunday</xf:value>
                </xf:item>             
        </xf:select1></td>

  </tr>
  <tr >
	  <td>Gespeicherte Spiele:</td>
	  <td style="font-size:15px;"><xf:output ref="IDs"/></td>

  </tr>
 
 
  
  <tr><td><p><xf:submit submission="newGameID">
      <xf:label>start</xf:label>
    </xf:submit></p></td></tr>
  <tr></tr>
  <tr></tr>
  <tr >
	  <td>Highscore:</td>
	  <td style="font-size:15px;" id="highscorelist">
	  
	  <xf:repeat nodeset="highscores/player"> 
            <div><xf:output class="hsc_name" ref="name"/><xf:output ref="points"/></div> 
        </xf:repeat> 
	  
	  </td>
  </tr>
    
    </table></div>

  </xf:group>




</body>
</html>
